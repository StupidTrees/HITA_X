<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_rounded_background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="?attr/textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="@android:string/cancel"
                app:cardBackgroundColor="?attr/colorControlDisabled"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/cancel"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="@string/confirm"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/confirm"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pick_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="46dp"
            android:orientation="horizontal">

            <com.stupidtree.hita.ui.widgets.MWheel3DView
                android:id="@+id/hour1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1.2"
                app:cyclic="false"
                app:divider="@android:color/transparent"
                app:selectedColor="?attr/colorAccent"
                app:textSize="30sp"
                app:toward="right"
                app:unselectedColor="?attr/backgroundIconColorBottom"
                app:visibleItems="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="@string/pick_single_time_label2"
                android:textColor="?attr/textColorSecondary"
                android:textSize="12sp" />

            <com.stupidtree.hita.ui.widgets.MWheel3DView
                android:id="@+id/minute1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1.2"
                app:cyclic="false"
                app:divider="@android:color/transparent"
                app:selectedColor="?attr/colorAccent"
                app:textSize="30sp"
                app:toward="right"
                app:unselectedColor="?attr/backgroundIconColorBottom"
                app:visibleItems="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/pick_single_time_label3"
                android:textColor="?attr/textColorSecondary"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="-"
                android:textColor="?attr/textColorSecondary"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <com.stupidtree.hita.ui.widgets.MWheel3DView
                android:id="@+id/hour2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1.2"
                app:cyclic="false"
                app:divider="@android:color/transparent"
                app:selectedColor="?attr/colorAccent"
                app:textSize="30sp"
                app:toward="right"
                app:unselectedColor="?attr/backgroundIconColorBottom"
                app:visibleItems="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="@string/pick_single_time_label2"
                android:textColor="?attr/textColorSecondary"
                android:textSize="12sp" />

            <com.stupidtree.hita.ui.widgets.MWheel3DView
                android:id="@+id/minute2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1.2"
                app:cyclic="false"
                app:divider="@android:color/transparent"
                app:selectedColor="?attr/colorAccent"
                app:textSize="30sp"
                app:toward="right"
                app:unselectedColor="?attr/backgroundIconColorBottom"
                app:visibleItems="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/pick_single_time_label3"
                android:textColor="?attr/textColorSecondary"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>